# Backend runtime configuration for the bundled Kshana server.
#
# Copy this file to `.env` and adjust values as needed. These values can also
# be overridden at runtime via the Electron settings panel.

# HTTP binding
KSHANA_HOST=127.0.0.1
KSHANA_PUBLIC_HOST=127.0.0.1
KSHANA_PORT=8001

# LLM provider configuration
LLM_PROVIDER=lmstudio
LMSTUDIO_BASE_URL=http://127.0.0.1:1234
LMSTUDIO_MODEL=qwen3
LMSTUDIO_API_KEY=not-needed

# Gemini (only used when LLM_PROVIDER=gemini)
GOOGLE_API_KEY=

# ComfyUI configuration
COMFYUI_BASE_URL=http://localhost:8000
COMFYUI_WS_URL=ws://localhost:8000/ws
COMFYUI_OUTPUT_DIR=outputs
COMFYUI_POLL_INTERVAL=2.0
COMFYUI_TIMEOUT=300

# Internal paths (populated automatically when launched via Electron)
KSHANA_PROJECT_DIR=
